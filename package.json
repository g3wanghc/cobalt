{
  "name": "cobalt-uoft",
  "version": "0.4.3",
  "description": "A collection of open data APIs that allow anyone to interface with public information from the University of Toronto.",
  "main": "lib/index.js",
  "engines": {
    "node": "^5.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cobalt-uoft/cobalt.git"
  },
  "author": "Cobalt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cobalt-uoft/cobalt/issues"
  },
  "homepage": "https://cobalt.qas.im",
  "keywords": [
    "cobalt",
    "uoft",
    "api",
    "opendata",
    "uoft-course-api",
    "uoft-building-api",
    "course-api",
    "building-api",
    "courses",
    "buildings",
    "university of toronto",
    "toronto",
    "express"
  ],
  "scripts": {
    "build": "rm -rf lib && ./node_modules/.bin/babel src/ -d lib/",
    "dev": "npm run build && ./bin/dev",
    "start": "./bin/cobalt",
    "lint": "eslint ./src",
    "test": "ava",
    "prepush": "npm run lint && npm test",
    "prepublish": "npm run build",
    "coverage": "nyc npm test",
    "coveralls": "npm run coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "ava": {
    "files": [
      "test/courses",
      "test/buildings",
      "test/textbooks",
      "test/food",
      "test/athletics",
      "test/events"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "exclude": [
      "src/db/index.js",
      "src/api/courses/routes/filterMapReduce.js",
      "src/api/athletics/routes/filterMapReduce.js"
    ]
  },
  "bin": {
    "cobalt": "./bin/cobalt"
  },
  "dependencies": {
    "babel-runtime": "^6.6.1",
    "co": "^4.6.0",
    "express": "^4.13.4",
    "minimist": "^1.2.0",
    "mongoose": "^4.4.12",
    "node-schedule": "^1.1.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-core": "^6.7.6",
    "babel-cli": "^6.7.5",
    "babel-eslint": "^6.0.2",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.7.0",
    "gaze": "^1.0.0",
    "husky": "^0.11.4",
    "nodemon": "^1.9.1",
    "nyc": "^6.2.1",
    "supertest": "^1.2.0"
  }
}
